<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp">

    <View
        android:id="@+id/viewImage"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="match_parent"
        android:background="@color/mediumGray"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/viewTitle"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintStart_toEndOf="@id/viewImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@color/mediumGray"/>

    <View
        android:id="@+id/viewDescription"
        android:layout_width="0dp"
        android:layout_height="@dimen/_50sdp"
        android:paddingStart="@dimen/_8sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:paddingBottom="@dimen/_2sdp"
        app:layout_constraintStart_toEndOf="@id/viewImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@id/viewTitle"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@color/mediumGray"/>

    <View
        android:id="@+id/viewLike"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:paddingStart="@dimen/_8sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:paddingBottom="@dimen/_2sdp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/viewImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@id/viewDescription"
        android:layout_marginTop="@dimen/_14sdp"
        android:background="@color/mediumGray"/>

    <View
        android:id="@+id/viewTime"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:paddingStart="@dimen/_8sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:paddingBottom="@dimen/_2sdp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/viewLike"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/viewDescription"
        android:layout_marginTop="@dimen/_14sdp"
        android:background="@color/mediumGray"/>

    <View
        android:id="@+id/viewVegan"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:paddingStart="@dimen/_8sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:paddingBottom="@dimen/_2sdp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/viewTime"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/viewDescription"
        android:layout_marginTop="@dimen/_14sdp"
        android:background="@color/mediumGray"/>

</androidx.constraintlayout.widget.ConstraintLayout>